{
  "name": "rocio-peralta-todos",
  "version": "2.0.0",
  "main": "server/index.ts",
  "license": "MIT",
  "keywords": [
    "fullstack"
  ],
  "scripts": {
    "start": "node dist/server/index.js",
    "test": "vitest",
    "dev": "run-p dev:client dev:server dev:css",
    "dev:client": "vite",
    "dev:server": "nodemon --watch server/",
    "dev:css": "tailwindcss -i ./dist/input.css -o ./dist/output.css --watch",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "knex": "knex --knexfile ./server/db/knexfile.js"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/user-event": "^14.5.1",
    "express": "^4.17.2",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "knex": "^2.5.1",
    "semver": "^7.5.4",
    "simple-update-notifier": "^2.0.0",
    "sqlite3": "^5.1.2",
    "superagent": "7.1.1"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.8.0",
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/react": "^13.4",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "@types/superagent": "^4.1.24",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "supertest": "^6.2.2",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.4",
    "vite": "^4.3.3",
    "vitest": "^1.1.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}
